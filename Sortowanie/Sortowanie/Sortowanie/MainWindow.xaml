<Window x:Class="Sortowanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sortowanie"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Button x:Name="startSorting" Content="Sortuj" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,228,0,0" Click="startSorting_Click"/>
        <ComboBox x:Name="sortingType" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBoxItem Content="Bubblesort" IsSelected="True"/>
            <ComboBoxItem Content="Quicksort"/>
            <ComboBoxItem Content="Insertionsort"/>
        </ComboBox>
        <Button x:Name="chooseFile" Content="Wybierz plik" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.216,0.425" Click="chooseFile_Click"/>
        <Label x:Name="time" Content="Sorting time:" HorizontalAlignment="Left" Margin="222,277,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
