<Window x:Class="Firma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Firma"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="143*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="employeesList"  Margin="0,0,450,0" Grid.RowSpan="2" SelectedIndex="0" SelectionMode="Single"/>
        <Button x:Name="addBtn" Content="Add Employee" HorizontalAlignment="Left" Margin="530,90,0,0" VerticalAlignment="Top" Height="50" Width="100" Background="Gainsboro" Click="addBtn_Click"/>
        <Button x:Name="delBtn" Content="Delete Employee" HorizontalAlignment="Left" Margin="530,19,0,0" VerticalAlignment="Top" Width="100" Height="50" Grid.Row="1" Click="delBtn_Click"/>
        <Button x:Name="editBtn" Content="Edit Contract" HorizontalAlignment="Left" Margin="530,97,0,0" VerticalAlignment="Top" Width="100" Height="50" Grid.Row="1" Click="editBtn_Click"/>

    </Grid>
</Window>
