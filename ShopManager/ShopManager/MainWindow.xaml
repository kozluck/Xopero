<Window x:Class="ShopManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,217" Name="ItemsGrid"/>
        <Button x:Name="delBtn" Content="Usuń zaznaczony produkt" HorizontalAlignment="Left" Margin="178,280,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.514,0.497" Height="28" Click="delBtn_Click" />
        <Button x:Name="editBtn" Content="Edytuj zaznaczony produkt" HorizontalAlignment="Left" Margin="364,280,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.514,0.497" Height="28" Click="editBtn_Click"/>
        <Button x:Name="addBtn" Content="Dodaj nowy produkt" HorizontalAlignment="Left" Margin="30,280,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.514,0.497" Height="28" Click="addBtn_Click"/>

    </Grid>
</Window>
