<Window x:Class="GitLabBackup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitLabBackup"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Project id:" HorizontalAlignment="Left" Margin="171,110,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="projectId" HorizontalAlignment="Left" Margin="310,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="30"/>
        <Button x:Name="doBackup" Content="Start Backup" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" FontSize="14" Click="doBackup_Click" Margin="0,166,0,0"/>
        <Button x:Name="restore" Content="Restore last backup" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" FontSize="14" Height="30" Click="restore_Click"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Center" Margin="0,267,0,0" VerticalAlignment="Top" Visibility="Hidden"/>

    </Grid>
</Window>
