<Window x:Class="diffViewer.DiffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diffViewer"
        mc:Ignorable="d"
        Title="DiffWindow" Height="800" Width="1200">
    <Grid>
        <Label x:Name="secondLabel" Content="Added lines to second file" HorizontalAlignment="Left" Margin="650,60,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="firstLabel" Content="Lines in first file only" HorizontalAlignment="Left" Margin="50,60,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="firstFileTextBlock" HorizontalAlignment="Left" Margin="50,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="500" FontSize="14"/>
        <TextBlock x:Name="secondFileTextBlock" HorizontalAlignment="Left" Margin="650,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="500" FontSize="14"/>

    </Grid>
</Window>
